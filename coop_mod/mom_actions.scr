//=========================================================================
main local.action:{
//=========================================================================
	if( self == NULL ){
		end
	}
	local.threadN = "momAction"
	local.threadN += local.action
	thread (local.threadN)
}end

//=========================================================================
momAction0:{
//=========================================================================
	waitthread momExit
	if(self != NULL){
		self exec coop_mod/developer.scr::threatbias
	}
}end

//=========================================================================
