//=========================================================================
momAction9:{
//=========================================================================
	iprintlnbold_noloc ( "m5l1a kill enemies" )
	wait 1
	while ($enemy[1] != NULL){
		$enemy[1] delete
		wait 0.25
	}
}end

//=========================================================================
momAction10:{
//=========================================================================
	level.coopChangeMap = 1
	for(local.i=5;local.i>0;local.i--){
		iprintlnbold_noloc ( "next map in:" + local.i )
		wait 1
		if(level.coopChangeMap == NIL){
			end
		}
	}
	if(level.coopChangeMap != NIL && level.coopNextMap != NIL){
		exec global/missioncomplete.scr level.coopNextMap
	}
}end

//=========================================================================
momAction11:{
//=========================================================================
	level.coopChangeMap = 1
	for(local.i=5;local.i>0;local.i--){
		iprintlnbold_noloc ( "previouse map in:" + local.i )
		wait 1
		if(level.coopChangeMap == NIL){
			end
		}
	}
	if(level.coopChangeMap != NIL && level.coopPrevMap != NIL){
		exec global/missioncomplete.scr level.coopPrevMap
	}
}end

//=========================================================================
momAction12:{
//=========================================================================
	iprintlnbold_noloc ( "canceled mapchange" )
	level.coopChangeMap = NIL
}end

